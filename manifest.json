{
    "name": "Rabatta",
    "version": "0.1",
    "description": "Rabatta er et værktøj lavet til at finde de bedste rabatkoder når du browser danske webshops",
    "icons": 
    { 
        "16": "/Images/Icon.png"
    },
    "permissions": [
        "activeTab",
        "<all_urls>",
        "tabs"
    ],
    "background": {
        "page":"background.html",
        "persistent": true
    },
    "manifest_version": 2,
    "browser_action": {
        "default_title": "Rabatkode",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' https://www.gstatic.com/ https://*.firebaseio.com https://www.googleapis.com; object-src 'self'",
    "web_accessible_resources": [
        "Images/*.png"
    ]
}